<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<!-- Appenders -->
	<Appenders>
		<Console name="STDOUT" value="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
		</Console>
	</Appenders>
	
	<!-- Application Loggers -->
	<Loggers>
		<Logger name="com.giraff.*" level="trace"/>
		<Root level="trace">
			<AppenderRef ref="STDOUT"/>
		</Root>
	</Loggers>
	
</Configuration>
